@{
  Layout = "_Layout";
}

@using Treats.Models;
@model List<Treats.Models.Treat>;

@if(@Model.Count == 0)
{
  <br>
  <p>No Treats Availible</p>
}
else
{
  <div class="row">
    <table class="table table-bordered table-hover">
      <thead>
        <th>Treat</th>
        <th>Description</th>
      </thead>
      <tbody>
        @foreach(var treat in Model)
        {
        <tr>
            <td>@Html.ActionLink($"{treat.TreatName}", "Details", "Treats", new{id = treat.TreatId})</td>
            <td>@treat.Description</td>
        </tr>
        }
      </tbody>
    </table>
  </div>
}
<br>
@if(User.Identity.IsAuthenticated)
{
  @Html.ActionLink("Add a Treat", "Create", "Treats", null, new { @class="htmlButton" })
  <br>
  <hr>
}
@Html.ActionLink("Return Home", "Index", "Home", null, new { @class="htmlButton" })