@{
  Layout = "_Layout";
}

@using Treats.Models;
@model List<Treats.Models.Flavor>;

@if(@Model.Count == 0)
{
  <br>
  <p>No Flavors Availible</p>
}
else
{
  <div class="row">
    <table class="table table-bordered table-hover">
      <thead>
        <th>Flavor</th>
      </thead>
      <tbody>
        @foreach(var flavor in Model)
        {
        <tr>
            <td>@Html.ActionLink($"{flavor.FlavorName}", "Details", "Flavors", new{id = flavor.FlavorId})</td>
        </tr>
        }
      </tbody>
    </table>
  </div>
}
<br>
@if(User.Identity.IsAuthenticated)
{
  @Html.ActionLink("Add a Flavor", "Create", "Flavors", null, new { @class="htmlButton" })
  <br>
  <hr>
}
@Html.ActionLink("Return Home", "Index", "Home", null, new { @class="htmlButton" })